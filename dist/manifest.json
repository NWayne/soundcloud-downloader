{
  "manifest_version": 2,

  "name": "SoundCloud Downloader",
  "description": "description",
  "version": "1.0",

  "browser_action": {
    "default_icon": "download.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "downloads"
  ],
  "content_scripts": [
    {
      "matches": ["https://soundcloud.com/*"],
      "js": ["app.js"]
    }
  ]
}
